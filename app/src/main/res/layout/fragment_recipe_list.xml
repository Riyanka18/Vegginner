<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_recipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/rv_recipes"
        app:layout_constraintEnd_toEndOf="@+id/rv_recipes"
        app:layout_constraintLeft_toLeftOf="@+id/rv_recipes"
        app:layout_constraintRight_toRightOf="@+id/rv_recipes"
        app:layout_constraintStart_toStartOf="@+id/rv_recipes"
        app:layout_constraintTop_toTopOf="@+id/rv_recipes" />

    <ImageView
        android:id="@+id/iv_edamam_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/edamam_logo"
        android:src="@drawable/edamam_logo"
        app:layout_constraintEnd_toEndOf="@+id/rv_recipes"
        app:layout_constraintLeft_toLeftOf="@+id/rv_recipes"
        app:layout_constraintRight_toRightOf="@+id/rv_recipes"
        app:layout_constraintStart_toStartOf="@+id/rv_recipes"
        app:layout_constraintTop_toBottomOf="@+id/pb_loading" />

    <TextView
        android:id="@+id/tv_no_recipes"
        style="@style/titleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_recipes"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rv_recipes"
        app:layout_constraintEnd_toEndOf="@+id/rv_recipes"
        app:layout_constraintLeft_toLeftOf="@+id/rv_recipes"
        app:layout_constraintRight_toRightOf="@+id/rv_recipes"
        app:layout_constraintStart_toStartOf="@+id/rv_recipes"
        app:layout_constraintTop_toTopOf="@+id/rv_recipes" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retry"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_recipes" />

</android.support.constraint.ConstraintLayout>